@{
  Layout = "_Layout";
}

    @using Bakery2.Models; 
    
     <h1>Vendor List:</h1>
        @if (Model.Count == 0)
    {
      <p>There are no current vendors.</p>
    }
   <div class= "container"> <ul>
      @foreach (Vendor vendor in Model) 
      {
       
        <li><a href='/vendors/@vendor.Id'>@vendor.VendorName - @vendor.VendorDescription</a></li>
       
      }
    </ul>
    </div>

  <a href='/vendors/new'>Create a new vendor profile</a>
  <br>
   <a href='/'>Return to homepage</a>
